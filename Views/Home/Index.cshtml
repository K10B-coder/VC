@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center py-5">
    <h1 class="display-4 mb-4">Welcome to Vitality Compass</h1>
    <p class="lead mb-4">Your personal guide to health tracking and wellness navigation</p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="mb-4">Vitality Compass is your comprehensive health tracking tool, helping you monitor infections, navigate healthcare facilities, and stay informed about public health in your area.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-map-marked-alt fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Infection Mapping</h3>
                    <p class="card-text">Track and visualize infection rates and health alerts in your area with our interactive mapping system.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-compass fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Healthcare Navigation</h3>
                    <p class="card-text">Input your own data to help update the map of illness and find services for help.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Health Education</h3>
                    <p class="card-text">Access comprehensive resources and stay informed about health practices and prevention.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)),
                    url('/images/health-background.jpg');
        background-size: cover;
        padding: 5rem 0;
        margin-top: -2rem;
        margin-bottom: 2rem;
    }

    .hero-section h1 {
        color: var(--primary-color);
        font-weight: 600;
    }

    .hero-section .lead {
        color: var(--accent-color);
        font-size: 1.4rem;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        color: var(--primary-color);
        font-size: 1.4rem;
        margin-bottom: 1rem;
    }

    .card-text {
        color: var(--text-color);
        font-size: 1rem;
        line-height: 1.6;
    }

    .btn-outline-primary {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

    .btn-outline-primary:hover {
        background-color: var(--accent-color);
        color: white;
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 3rem 0;
        }

        .hero-section h1 {
            font-size: 2.5rem;
        }

        .hero-section .lead {
            font-size: 1.2rem;
        }
    }
</style>